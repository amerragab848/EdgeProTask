@model IEnumerable<EdgProDemo.Models.EmployeeListingVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "AddEmployee", "Employees", null, new { @class = "button" })
</p>
<p>
@Html.ActionLink(" Employee Trees ", "TreesEmployee", "Employees",null, new { @class = "button" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SSN)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SSN)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditEmployee", new { id = item.Id }) |
                @Html.ActionLink("Add Employee Data", "AddEmployeeData", "EmplyeeData", new { id = item.Id }, null)
                @* @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
            </td>
        </tr>
    }

</table>
