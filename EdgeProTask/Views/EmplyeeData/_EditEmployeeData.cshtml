@model EmployeeDataVM
@using EdgeProTask.Models

<form asp-action="EditEmployeeData" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = "Edit Book" })
    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="Address" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Address" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Age" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Age" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="City" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="City" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Latitude" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Latitude" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Longitude" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="Longitude" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="State" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ZipCode" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <input asp-for="ZipCode" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EmployeeId" class="col-lg-3 col-sm-3 control-label"></label>
            <div class="col-lg-6">
                <select asp-for="EmployeeId" asp-items="@Model.Employees" class="form-control">
                    <option>Please select</option>
                </select>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>


